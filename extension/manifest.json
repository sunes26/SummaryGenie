{
  "manifest_version": 3,
  "name": "SummaryGenie - AI Web Page Summarizer",
  "version": "2.3.1",
  "description": "AI가 웹페이지와 PDF를 즉시 요약해주는 스마트한 읽기 도우미 (프리미엄 기능)",
  "default_locale": "ko",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "notifications",
    "alarms",
    "tabs",
    "sidePanel",
    "offscreen"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SummaryGenie - 페이지 요약"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content-styles.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "modules/*.js",
        "icons/*",
        "auth.html",
        "auth.css",
        "auth.js",
        "firebase-app.js",
        "firebase-auth.js",
        "popup.html",
        "popup.css",
        "sidepanel.html",
        "sidepanel.css",
        "sidepanel.js",
        "options.html",
        "options.css",
        "_locales/*/messages.json",
        "pdf-extractor.js",
        "lib/pdf.mjs",
        "lib/pdf.worker.mjs",
        "lib/pdf.sandbox.mjs",
        "lib/*.map",
        "lib/cmaps/*",
        "pdf-offscreen.html",
        "pdf-offscreen-main.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Command+Shift+G"
      },
      "description": "SummaryGenie Side Panel 열기"
    },
    "summarize-page": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Command+Shift+S"
      },
      "description": "현재 페이지 요약"
    },
    "open-history": {
      "suggested_key": {
        "default": "Alt+H",
        "mac": "Command+Shift+H"
      },
      "description": "히스토리 열기"
    }
  },
  "minimum_chrome_version": "114",
  "externally_connectable": {
    "matches": [
      "https://api.summarygenie.com/*",
      "https://summarygenie.com/*"
    ]
  },
  "author": "SummaryGenie Team",
  "homepage_url": "https://summarygenie.com"
}