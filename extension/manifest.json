{
  "manifest_version": 3,
  "name": "SummaryGenie - AI Web Page Summarizer",
  "version": "2.0.1",
  "description": "AI가 웹페이지를 즉시 요약해주는 스마트한 읽기 도우미",
  "default_locale": "ko",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "notifications",
    "alarms",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://localhost:3000/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SummaryGenie - 페이지 요약"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "modules/*.js",
        "icons/*",
        "auth.html",
        "auth.css",
        "auth.js",
        "popup.html",
        "popup.css",
        "options.html",
        "options.css",
        "_locales/*/messages.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests; block-all-mixed-content;"
  },
  
  "commands": {
    "summarize-page": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Command+Shift+S"
      },
      "description": "현재 페이지 요약"
    },
    "open-popup": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Command+Shift+G"
      },
      "description": "SummaryGenie 열기"
    },
    "open-history": {
      "suggested_key": {
        "default": "Alt+H",
        "mac": "Command+Shift+H"
      },
      "description": "히스토리 열기"
    }
  },
  
  "minimum_chrome_version": "88",
  
  "externally_connectable": {
    "matches": [
      "https://api.summarygenie.com/*",
      "https://summarygenie.com/*"
    ]
  },
  
  "author": "SummaryGenie Team",
  "homepage_url": "https://summarygenie.com"
}