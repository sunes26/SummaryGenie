# ===== Stage 1: Dependencies =====
FROM node:18-alpine AS dependencies

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# íŒ¨í‚¤ì§€ íŒŒì¼ë§Œ ë¨¼ì € ë³µì‚¬ (ë ˆì´ì–´ ìºì‹± ìµœì í™”)
COPY package*.json ./

# í”„ë¡œë•ì…˜ ì˜ì¡´ì„±ë§Œ ì„¤ì¹˜
RUN npm ci --only=production && \
    npm cache clean --force

# ===== Stage 2: Production =====
FROM node:18-alpine AS production

# ë©”íƒ€ë°ì´í„°
LABEL maintainer="SummaryGenie Team"
LABEL version="2.1.0"
LABEL description="AI-powered web summarization service - Production Build"

# ë¹„ë£¨íŠ¸ ì‚¬ìš©ì ìƒì„± (ë³´ì•ˆ)
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# ì˜ì¡´ì„± ë³µì‚¬
COPY --from=dependencies --chown=nodejs:nodejs /app/node_modules ./node_modules

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì†ŒìŠ¤ ë³µì‚¬
COPY --chown=nodejs:nodejs . .

# ğŸ”¥ Firebase ì„œë¹„ìŠ¤ ê³„ì • í‚¤ ë³µì‚¬ (í”„ë¡œë•ì…˜ í•„ìˆ˜)
# âš ï¸ ì£¼ì˜: .dockerignoreì—ì„œ serviceAccountKey.json ì œì™¸ í•„ìš”
COPY --chown=nodejs:nodejs serviceAccountKey.json /serviceAccountKey.json

# ===== í™˜ê²½ë³€ìˆ˜ ê¸°ë³¸ê°’ ì„¤ì • =====
ENV NODE_ENV=production
ENV PORT=3000

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì„¤ì •
ENV FREE_USER_DAILY_LIMIT=3
ENV DATA_RETENTION_DAYS=30
ENV RATE_LIMIT_WINDOW_MS=60000
ENV RATE_LIMIT_MAX_REQUESTS=30
ENV CACHE_TTL=60000

# ===== í—¬ìŠ¤ì²´í¬ ì„¤ì • =====
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# í¬íŠ¸ ë…¸ì¶œ
EXPOSE 3000

# ë¹„ë£¨íŠ¸ ì‚¬ìš©ìë¡œ ì „í™˜ (ë³´ì•ˆ ê°•í™”)
USER nodejs

# ===== ì• í”Œë¦¬ì¼€ì´ì…˜ ì‹œì‘ =====
CMD ["node", "src/server.js"]

