{
  "name": "summarygenie-proxy-server",
  "version": "2.0.0",
  "description": "Proxy server for SummaryGenie Chrome Extension - Firebase/OpenAI integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy-indexes": "firebase deploy --only firestore:indexes",
    "firebase:init": "node scripts/firebase-init.js",
    "firebase:deploy": "firebase deploy --only firestore",
    "migrate:data": "node scripts/migrate-data.js"
  },
  "keywords": [
    "openai",
    "gpt",
    "summarization",
    "proxy",
    "chrome-extension",
    "firebase",
    "firestore"
  ],
  "author": "SummaryGenie Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "firebase-tools": "^14.17.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
